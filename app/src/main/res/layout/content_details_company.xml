<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:transitionGroup="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:ignore="UnusedAttribute">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Login progress -->
        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/container_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/light_gray"
            card_view:cardCornerRadius="1dp"
            card_view:cardUseCompatPadding="true"
            tools:ignore="UnusedAttribute">

            <RelativeLayout
                android:id="@+id/general"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:id="@+id/icon_edit_main_form"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="updateVisivilityMain"
                    android:scaleType="center"
                    app:materialIcon="pencil"
                    app:materialIconColor="@color/colorAccent"
                    app:materialIconSize="40dp" />


                <RelativeLayout
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp">

                    <ImageView
                        android:id="@+id/header_img"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_alignParentTop="true"
                        android:background="@android:color/white"
                        android:foregroundGravity="center"
                        android:scaleType="fitCenter"
                        android:transitionName="@string/img_transition"
                        tools:targetApi="lollipop" />

                    <ImageView
                        android:id="@+id/state_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/state_icon"
                        android:rotation="180"
                        android:visibility="gone" />

                </RelativeLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_sub_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/light_gray"
            card_view:cardCornerRadius="2dp"
            card_view:cardUseCompatPadding="true"
            tools:ignore="UnusedAttribute">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:gravity="end"
                    android:paddingStart="20dp"
                    android:paddingBottom="5dp"
                    android:text="Datos de la empresa"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/label_actividades_economicas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/background_black"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/label_ciuu"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <co.tecno.sersoluciones.analityco.views.ShipInfoView
                        android:id="@+id/edit_economic_activity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_toEndOf="@+id/label_actividades_economicas"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:gravity="start" />


                    <ImageView
                        android:id="@+id/label_domains"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/edit_economic_activity"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/ic_www" />

                    <!--  <TextView
                          android:id="@+id/label_domains"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignParentStart="true"
                          android:layout_marginEnd="10dp"
                          android:layout_marginTop="5dp"
                          android:fontFamily="sans-serif-light"
                          android:text="@string/label_domains"
                          android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                          android:textColor="@android:color/black"
                          android:textSize="17dp"
                          android:textStyle="bold" />-->

                    <co.tecno.sersoluciones.analityco.views.ShipInfoView
                        android:id="@+id/info_domains"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/edit_economic_activity"
                        android:layout_marginBottom="8dp"
                        android:layout_toEndOf="@+id/label_domains"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:gravity="start" />

                    <!--  <TextView
                          android:id="@+id/label_web"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignParentStart="true"
                          android:layout_below="@+id/info_domains"
                          android:layout_marginEnd="10dp"
                          android:fontFamily="sans-serif-light"
                          android:text="@string/label_web"
                          android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                          android:textColor="@android:color/black"
                          android:textStyle="bold" />-->
                    <ImageView
                        android:id="@+id/label_web"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/info_domains"
                        android:layout_marginEnd="24dp"
                        app:srcCompat="@drawable/ic_pagina_web" />

                    <!--   <net.steamcrafted.materialiconlib.MaterialIconView
                           android:layout_width="30dp"
                           android:layout_height="30dp"
                           android:layout_below="@+id/info_domains"
                           android:layout_marginBottom="5dp"
                           android:layout_marginEnd="10dp"
                           android:layout_marginTop="5dp"
                           android:scaleType="center"
                           app:materialIcon="web"
                           app:materialIconColor="#b3000000"
                           app:materialIconSize="30dp" />-->


                    <TextView
                        android:id="@+id/text_web"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/info_domains"
                        android:layout_marginBottom="8dp"
                        android:layout_toEndOf="@+id/label_web"
                        android:fontFamily="sans-serif-light"
                        android:gravity="start"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/black"
                        tools:ignore="RtlHardcoded" />


                </RelativeLayout>

                <androidx.legacy.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:gravity="end"
                    android:paddingStart="20dp"
                    android:paddingBottom="5dp"
                    android:text="@string/oficina_principal"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:id="@+id/icon_address"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="24dp"
                        android:scaleType="center"
                        app:materialIcon="map_marker"
                        app:materialIconColor="#b3000000"
                        app:materialIconSize="30dp" />

                    <TextView
                        android:id="@+id/text_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_toEndOf="@+id/icon_address"
                        android:fontFamily="sans-serif-light"
                        android:gravity="end"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/black"
                        tools:ignore="RtlHardcoded" />

                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:id="@+id/icon_mail"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/text_address"
                        android:layout_marginEnd="24dp"
                        android:scaleType="center"
                        app:materialIcon="email"
                        app:materialIconColor="#b3000000"
                        app:materialIconSize="30dp" />

                    <TextView
                        android:id="@+id/text_mail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_address"
                        android:layout_marginBottom="8dp"
                        android:layout_toEndOf="@+id/icon_mail"
                        android:fontFamily="sans-serif-light"
                        android:gravity="end"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/black"
                        tools:ignore="RtlHardcoded" />

                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:id="@+id/icon_phone"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/text_mail"
                        android:layout_marginEnd="24dp"
                        android:scaleType="center"
                        app:materialIcon="phone"
                        app:materialIconColor="#b3000000"
                        app:materialIconSize="30dp" />

                    <TextView
                        android:id="@+id/text_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_mail"
                        android:layout_marginBottom="5dp"
                        android:layout_toEndOf="@+id/icon_phone"
                        android:fontFamily="sans-serif-light"
                        android:gravity="end"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/black"
                        tools:ignore="RtlHardcoded" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/branch_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/branch_office_titles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:gravity="end"
                        android:paddingStart="20dp"
                        android:paddingBottom="5dp"
                        android:text="@string/otras_sucursales"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                    <View
                        android:id="@+id/branch_office_line"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorPrimary" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_branch_offices"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        android:visibility="visible" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:gravity="end"
                    android:paddingStart="20dp"
                    android:paddingBottom="5dp"
                    android:text="@string/mas_informacion"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded,RtlSymmetry" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/icon_more_info"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/ic_more_info"
                        android:foregroundGravity="center_vertical" />

                    <TextView
                        android:id="@+id/text_more_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_toEndOf="@+id/icon_more_info"
                        android:fontFamily="sans-serif-light"
                        android:gravity="end"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/black"
                        tools:ignore="RtlHardcoded" />

                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_validity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="2dp"
            card_view:cardUseCompatPadding="true"
            tools:ignore="UnusedAttribute">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:gravity="end"
                    android:paddingStart="20dp"
                    android:paddingBottom="5dp"
                    android:text="@string/condiciones_de_servicio"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary" />

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:id="@+id/document"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_above="@+id/label_start"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="center"
                    app:materialIcon="file_document"
                    app:materialIconColor="@color/gray"
                    app:materialIconSize="70dp" />


                <RelativeLayout
                    android:id="@+id/validity_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:id="@+id/icon_edit_validity"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_above="@+id/label_area_geofence"
                        android:layout_alignParentEnd="true"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:onClick="updateVisivilityValidity"
                        android:scaleType="center"
                        android:visibility="gone"
                        app:materialIcon="pencil"
                        app:materialIconColor="@color/colorAccent"
                        app:materialIconSize="30dp" />

                    <TextView
                        android:id="@+id/label_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/label_start"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="0dp"
                        android:layout_toEndOf="@+id/label_start"
                        android:fontFamily="sans-serif-light"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/black"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:id="@+id/label_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_start_date"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/label_end"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_end_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_start_date"
                        android:layout_centerHorizontal="true"
                        android:layout_toEndOf="@+id/label_start"
                        android:fontFamily="sans-serif-light"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/black"
                        tools:ignore="RtlHardcoded" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/text_end_date"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/label_area_geofence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/label_end"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="40dp"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/label_area_geofence"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_area_geofence"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_end_date"
                        android:layout_marginTop="40dp"
                        android:layout_toEndOf="@+id/label_area_geofence"
                        android:fontFamily="sans-serif-light"
                        android:gravity="end"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/black"
                        tools:ignore="RtlHardcoded" />


                    <TextView
                        android:id="@+id/Almac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/label_area_geofence"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/storage"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_area_geofence"
                        android:layout_alignParentEnd="true"
                        android:layout_toStartOf="@+id/icon_edit_validity"
                        android:layout_toEndOf="@+id/Almac"
                        android:fontFamily="sans-serif-light"
                        android:gravity="end"
                        android:text="0"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/black"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:id="@+id/maxUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Almac"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/maxUser"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/maxUserNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Almac"
                        android:layout_alignParentEnd="true"
                        android:layout_toStartOf="@+id/icon_edit_validity"
                        android:layout_toEndOf="@+id/maxUser"
                        android:fontFamily="sans-serif-light"
                        android:gravity="end"
                        android:text="0"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/black"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:id="@+id/maxPersonal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/maxUser"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/maxPersonal"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/maxUserNum"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@+id/maxPersonal"
                        android:fontFamily="sans-serif-light"
                        android:gravity="end"
                        android:text="0"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/black"
                        tools:ignore="RtlHardcoded" />
                    <!--  <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_below="@+id/text_end_date"
                          android:layout_marginBottom="5dp"
                          android:layout_toEndOf="@+id/icon_update_validity"
                          android:layout_toStartOf="@+id/icon_edit_validity"
                          android:gravity="center"
                          android:orientation="horizontal">

                          <TextView
                              android:id="@+id/label_customer_active"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginEnd="10dp"
                              android:fontFamily="sans-serif-light"
                              android:gravity="end"
                              android:textSize="17dp"
                              android:text="@string/label_customer_active"
                              android:textAppearance="?android:attr/textAppearanceMedium"
                              android:textColor="@android:color/black"
                              android:textStyle="bold"
                              tools:ignore="RtlHardcoded" />

                          <net.steamcrafted.materialiconlib.MaterialIconView
                              android:id="@+id/icon_is_active"
                              android:layout_width="40dp"
                              android:layout_height="40dp"
                              android:scaleType="center"
                              app:materialIcon="thumb_up"
                              app:materialIconColor="@color/colorAccent"
                              app:materialIconSize="40dp" />

                      </LinearLayout>-->


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/alertPermissions1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <include layout="@layout/unauthorized_menssaje" />

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <androidx.cardview.widget.CardView
            android:id="@+id/proyects"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardBackgroundColor="@color/light_gray"
            card_view:cardCornerRadius="2dp"
            card_view:cardUseCompatPadding="true"
            tools:ignore="UnusedAttribute">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_text"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="end"
                        android:text="Proyectos"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary" />

                <LinearLayout
                    android:id="@+id/NewProjectLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1.5"
                        android:fontFamily="sans-serif-light"
                        android:paddingBottom="5dp"
                        android:text="@string/crear_proyecto"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorPrimary"
                        tools:ignore="RtlHardcoded" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/addProject"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"
                        app:backgroundTint="@color/colorAccent"
                        app:fabSize="mini"
                        app:srcCompat="@drawable/ic_menu_add"
                        tools:ignore="RelativeOverlap,RtlHardcoded" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_projects"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="vertical" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/alertPermissions2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <include layout="@layout/unauthorized_menssaje" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/users"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/light_gray"
            card_view:cardCornerRadius="2dp"
            card_view:cardUseCompatPadding="true"
            tools:ignore="UnusedAttribute">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="end"
                        android:text="Usuarios Administradores"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary" />

                <LinearLayout
                    android:id="@+id/buttonAddUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="@dimen/margin_text"
                        android:layout_weight="1.5"
                        android:fontFamily="sans-serif-light"
                        android:text="Vincular usuario"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorPrimary"
                        tools:ignore="RtlHardcoded" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/addUser"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"
                        app:backgroundTint="@color/colorAccent"
                        app:fabSize="mini"
                        app:srcCompat="@drawable/ic_menu_add"
                        tools:ignore="RelativeOverlap,RtlHardcoded" />
                </LinearLayout>

                <!--   <FrameLayout
                       android:id="@+id/container_join"
                       android:visibility="gone"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_users"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/alertPermissions3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <include layout="@layout/unauthorized_menssaje" />

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>