<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- <include layout="@layout/content_project"
         android:id="@+id/form"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ababab" />


        <LinearLayout
            android:id="@+id/layoutSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <net.steamcrafted.materialiconlib.MaterialIconView
                android:id="@+id/icon_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:scaleType="fitCenter"
                app:materialIcon="city"
                app:materialIconColor="@color/md_white_1000"
                app:materialIconSize="36dp" />

            <Spinner
                android:id="@+id/spinner_companies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:popupTheme="@android:style/ThemeOverlay.Material.Dark" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/content_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:cardElevation="1dp"
                card_view:cardBackgroundColor="@android:color/transparent"
                card_view:cardCornerRadius="2dp"
                card_view:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/whiteTransparent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <Spinner
                            android:id="@+id/spinner_employee_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/spinner_background"
                            android:popupBackground="@android:color/white" />


                        <androidx.legacy.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="8dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_search"
                            android:padding="7dp">

                            <EditText
                                android:id="@+id/edtt_numContract"
                                style="@style/InnovoEditText"
                                android:hint="@string/contract_number"
                                android:inputType="text"
                                android:maxLength="50"
                                android:maxLines="1" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.legacy.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:background="@drawable/border"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <Spinner
                                android:id="@+id/spinner_image"
                                android:layout_width="0dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1" />

                            <Button
                                android:id="@+id/add_scan_contract"
                                android:layout_width="0dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:background="@drawable/btn_add_scan_contract"
                                android:text="@string/cargar_contrato_escaneado" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/send_contract"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/label_name"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@color/accent"
                            android:text="@string/str_send_contract"
                            android:textColor="@android:color/white"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/file_contract"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/name_contract"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="contrato"
                                android:textAlignment="center" />

                            <Button
                                android:id="@+id/removeContract"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/ic_list_remove" />
                        </LinearLayout>


                        <androidx.legacy.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="8dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_search"
                            android:padding="7dp">

                            <EditText
                                android:id="@+id/edtt_review"
                                style="@style/InnovoEditText"
                                android:hint="@string/review"
                                android:inputType="text"
                                android:maxLength="50"
                                android:maxLines="1" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.legacy.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="8dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="end"
                        android:paddingStart="20dp"
                        android:paddingBottom="5dp"
                        android:text="CONTRATANTE"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorAccent" />

                    <include layout="@layout/custom_list_info_recycler" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/companies_spinner_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bg_search"
                        android:padding="2dp">

                        <Spinner
                            android:id="@+id/companies_spinner"
                            style="@style/InnovoEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/spinner_background"
                            android:popupBackground="@android:color/white" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/list_users_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white" />

                    <LinearLayout
                        android:id="@+id/contentContratista"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif-light"
                            android:gravity="end"
                            android:paddingStart="20dp"
                            android:paddingBottom="5dp"
                            android:text="CONTRATISTA"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorAccent" />

                        <RelativeLayout
                            android:id="@+id/employerSelected"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/logo_contract"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:contentDescription="@string/str_phone"
                                android:scaleType="fitCenter" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/logo_contract"
                                android:paddingLeft="5dp"
                                android:paddingTop="10dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="10dp">

                                <TextView
                                    android:id="@+id/text_name_contract"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginEnd="20dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_toStartOf="@+id/btn_edit_contract"
                                    android:ellipsize="end"
                                    android:fontFamily="sans-serif-light"
                                    android:maxLines="1"
                                    android:textAllCaps="true"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="@android:color/black" />

                                <TextView
                                    android:id="@+id/text_sub_name_contract"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/text_name_contract"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginEnd="40dp"
                                    android:layout_marginBottom="2dp"
                                    android:layout_toStartOf="@+id/btn_edit_contract"
                                    android:ellipsize="end"
                                    android:fontFamily="sans-serif-light"
                                    android:maxLines="1"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    android:textColor="@android:color/black" />

                                <Button
                                    android:id="@+id/btn_edit_contract"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/ic_list_remove" />


                            </RelativeLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/layout_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:visibility="gone">

                            <Spinner
                                android:id="@+id/spinner_contract_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/employers_spinner_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/bg_search"
                            android:padding="2dp">

                            <Spinner
                                android:id="@+id/employers_spinner"
                                style="@style/InnovoEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/spinner_background"
                                android:popupBackground="@android:color/white" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/list_employer_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:background="@android:color/white" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>