<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="co.tecno.sersoluciones.analityco.ui.createPersonal.viewmodels.PersonalViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/controls_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/white"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:padding="12dp"
                android:textAllCaps="true"
                android:visibility="invisible" />

            <Button
                android:id="@+id/submit_button"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:padding="12dp"
                android:text="FINALIZAR"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>

        <View
            android:id="@+id/border_bottom"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp"
            android:background="#ababab" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/border_bottom"
            android:fillViewport="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:background="@android:color/white"
                    android:visibility="gone"
                    app:menu="@menu/bottom_navigation_main" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbarCompany"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/accent"
                        android:elevation="5dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="20dp"
                            android:text="Requerimientos"
                            android:textColor="#fff"
                            android:textSize="18sp"
                            android:textStyle="normal" />

                    </androidx.appcompat.widget.Toolbar>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/editRequirement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="2dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.Toolbar
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:background="@color/accent"
                                android:elevation="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/requirementTitle"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAlignment="center"
                                        android:textColor="#fff"
                                        android:textSize="18sp"
                                        android:textStyle="normal" />

                                    <TextView
                                        android:id="@+id/requiremnetDes"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAlignment="center"
                                        android:textColor="#fff"
                                        android:textSize="16sp"
                                        android:textStyle="normal" />
                                </LinearLayout>
                            </androidx.appcompat.widget.Toolbar>

                            <RelativeLayout
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:background="@drawable/border"
                                android:padding="10dp">

                                <ImageView
                                    android:id="@+id/iconFile"
                                    android:layout_width="140dp"
                                    android:layout_height="140dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/ic_note_text" />

                                <com.google.android.material.floatingactionbutton.FloatingActionButton
                                    android:id="@+id/fabRemove"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    app:backgroundTint="@color/pink"
                                    app:fabSize="mini"
                                    app:srcCompat="@android:drawable/ic_menu_delete" />

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="15dp">

                                <androidx.legacy.widget.Space
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:text="@string/label_validity"
                                        android:textAllCaps="true"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textStyle="normal" />

                                    <Button
                                        android:id="@+id/fromDateBtn"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:background="@drawable/border"
                                        android:backgroundTint="@color/back_transparent"
                                        android:drawableLeft="@drawable/ic_calendar"
                                        android:foreground="?android:attr/selectableItemBackground"
                                        android:gravity="center"
                                        android:paddingLeft="30dip"
                                        android:paddingRight="30dip"
                                        android:textColor="@color/black_alpha"
                                        android:textAllCaps="true"
                                        android:textAppearance="?android:attr/textAppearanceMedium" />

                                    <android.widget.TextView
                                        android:id="@+id/tvFromDateError"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginTop="30dp"
                                        android:focusable="true"
                                        android:focusableInTouchMode="true"
                                        android:paddingTop="0dp"
                                        android:visibility="gone" />

                                </RelativeLayout>
                                <RelativeLayout
                                    android:id="@+id/type_risk"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:fontFamily="sans-serif-light"
                                        android:text="@string/tipo_de_riesgo"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textStyle="bold" />

                                    <Spinner
                                        android:id="@+id/spinnerTypeRisk"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:background="@drawable/spinner_background"
                                        android:popupBackground="@android:color/white" />
                                </RelativeLayout>
                                <RelativeLayout
                                    android:id="@+id/SearchToRequeriment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="visible"
                                    android:orientation="vertical">
                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/eps_input_layout"
                                        style="@style/ExposedDropdownMenuText.App.TextInputLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/bg_search"
                                        android:visibility="gone"
                                        app:startIconDrawable="@drawable/ic_menu_search">

                                        <AutoCompleteTextView
                                            android:id="@+id/epsAutoCompleteTextView"
                                            style="@style/AnalitycoEditText"
                                            android:hint="EPS"
                                            android:inputType="text"
                                            android:maxLength="100"
                                            android:maxLines="1"
                                            />
                                    </com.google.android.material.textfield.TextInputLayout>
                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/afp_input_layout"
                                        style="@style/ExposedDropdownMenuText.App.TextInputLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/bg_search"
                                        android:visibility="gone"
                                        app:startIconDrawable="@drawable/ic_menu_search">

                                        <AutoCompleteTextView
                                            android:id="@+id/afpAutoCompleteTextView"
                                            style="@style/AnalitycoEditText"
                                            android:hint="AFP"
                                            android:inputType="text"
                                            android:maxLength="100"
                                            android:maxLines="1"
                                            />
                                    </com.google.android.material.textfield.TextInputLayout>
                                </RelativeLayout>
                                <androidx.legacy.widget.Space
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/negativeButton"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/cancel_button"
                                    style="@style/Widget.Button.Cancel"/>

                                <Button
                                    android:id="@+id/positiveButton"
                                    style="@style/Widget.Button.Green"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/text_aceptar" />

                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Requisitos exigidos"
                        android:textColor="@color/colorGreenDisabled"
                        android:textSize="20dp"
                        android:layout_margin="5dp"
                        android:textStyle="bold"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="@color/colorGreenDisabled" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerRequirements"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/label_requisitos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text="ESTE EMEPLEADO NO TIENE REQUISITOS ASOCIADOS"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/mProgressView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_overlay"
            android:elevation="20dp"
            android:gravity="center"
            android:visibility="gone">

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_anchorGravity="center_vertical|center_horizontal" />
        </LinearLayout>
    </RelativeLayout>
</layout>
